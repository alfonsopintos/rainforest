



<h1>Listing Products</h1>

<div>
<!---[3] Added...this thing. Dunno what it does? -->

  <%= form_tag products_path, :method => 'get' do %>
      <%= search_field_tag :search, params[:search]%>
      <%= submit_tag "Search", name: nil %>
    <% end %>

  <!--[3] End Added : MOVED TO INDEX.HTML -->
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Description</th>
      <!-- <th>Product Details</th> -->
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>




<!-- Disabled product details on index page, too much clutter. Product details only enabled in product show page. -->

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= image_tag product.avatar.url(:thumb) %></td>
        <td><%= product.description %></td>
      <!--   <td><%= product.details %> </td> -->
        <!-- <td><%= product.details %> </td> -->
        <td>$<%= product.formatted_price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

